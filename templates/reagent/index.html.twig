{% extends 'app.html.twig' %}

{% block title %}Reagent finder{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
{% endblock %}
{% block scripts %}
    <script src="{{ asset('js/finder.js') }}"></script>
{% endblock %}

{% block body %}
    <h1>Reagent finder</h1>

    <input type="text" id="query" onkeyup="ifenter(event)">
    <button onclick="find()">ðŸ”Ž</button>&nbsp;
    <span id="loading">_</span>

    <table class="table">
        <thead>
            <tr>
                {# <th>Id</th> #}
                <th>Name</th>
                <th>Formula</th>
                <th>CAS</th>
                {# <th>Private</th>
                <th>Secure</th> #}
                <th>Notes</th>
                <th></th>
            </tr>
        </thead>
        <tbody id="resultsTable">
        {% for reagent in reagents %}
            <tr>
                {# <td>{{ reagent.id }}</td> #}
                <td class="reagentname">{{ reagent.name }}</td>
                <td>{{ reagent.formula }}</td>
                <td>{{ reagent.cas }}</td>
                {# <td>{{ reagent.private ? 'Yes' : 'No' }}</td>
                <td>{{ reagent.secure ? 'Yes' : 'No' }}</td> #}
                <td>{{ reagent.notes }}</td>
                <td>
                    <a href="{{ path('reagent_show', {'id': reagent.id}) }}">ðŸ—Ž</a> | <a href="{{ path('reagent_edit', {'id': reagent.id}) }}">ðŸ–‰</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('reagent_new') }}">Create new</a>
{% endblock %}
