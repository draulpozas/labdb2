{% extends 'app.html.twig' %}

{% block title %}Reagent{% endblock %}

{% block body %}
    <h1>Reagent</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reagent.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ reagent.name }}</td>
            </tr>
            <tr>
                <th>Formula</th>
                <td>{{ reagent.formula }}</td>
            </tr>
            <tr>
                <th>Cas</th>
                <td>{{ reagent.cas }}</td>
            </tr>
            <tr>
                <th>Private</th>
                <td>{{ reagent.private ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Secure</th>
                <td>{{ reagent.secure ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Notes</th>
                <td>{{ reagent.notes }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('reagent_index') }}">back to list</a>

    <a href="{{ path('reagent_edit', {'id': reagent.id}) }}">edit</a>

    {{ include('reagent/_delete_form.html.twig') }}
{% endblock %}
